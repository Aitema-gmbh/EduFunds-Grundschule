{
  "name": "edufunds-grundschule",
  "version": "1.0.0",
  "description": "EduFunds - Interaktive Lernplattform für Grundschüler",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage --verbose",
    "test:watch": "jest --watch",
    "test:security": "jest tests/security.test.js",
    "test:integration": "jest tests/integration.test.js",
    "fix-permissions": "bash scripts/fix-permissions.sh",
    "setup-env": "bash scripts/setup-env.sh",
    "lint": "eslint .",
    "start": "node index.js",
    "dev": "nodemon index.js"
  },
  "keywords": [
    "education",
    "learning",
    "grundschule",
    "ai"
  ],
  "author": "EduFunds Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.2",
    "eslint": "^8.56.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "config/**/*.js",
      "!node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
